#include <stdio.h>

int main() {
    int choice;
    while(1){
        printf("=== TWRP Simulado ===\n");
        printf("1. Install\n");
        printf("2. Backup\n");
        printf("3. Restore\n");
        printf("4. Wipe\n");
        printf("5. Reboot\n");
        printf("Elige opci칩n: ");
        scanf("%d", &choice);

        switch(choice){
            case 1: printf("Simulando instalaci칩n...\n"); break;
            case 2: printf("Simulando backup...\n"); break;
            case 3: printf("Simulando restore...\n"); break;
            case 4: printf("Simulando wipe...\n"); break;
            case 5: printf("Reiniciando sistema...\n"); return 0;
            default: printf("Opci칩n no v치lida\n"); break;
        }
    }
    return 0;
}
