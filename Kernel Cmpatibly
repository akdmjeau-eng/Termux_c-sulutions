#include <linux/module.h>
#include <linux/netdevice.h>

static struct net_device *mydev;

static int my_open(struct net_device *dev) {
    netif_start_queue(dev);
    return 0;
}

static int my_stop(struct net_device *dev) {
    netif_stop_queue(dev);
    return 0;
}

static netdev_tx_t my_xmit(struct sk_buff *skb, struct net_device *dev) {
    dev_kfree_skb(skb);
    return NETDEV_TX_OK;
}

static const struct net_device_ops my_ops = {
    .ndo_open       = my_open,
    .ndo_stop       = my_stop,
    .ndo_start_xmit = my_xmit,
};

static void setup(struct net_device *dev) {
    dev->netdev_ops = &my_ops;
}

static int __init my_init(void) {
    mydev = alloc_netdev(0, "my5g%d", NET_NAME_UNKNOWN, setup);
    return register_netdev(mydev);
}

static void __exit my_exit(void) {
    unregister_netdev(mydev);
    free_netdev(mydev);
}

module_init(my_init);
module_exit(my_exit);
MODULE_LICENSE("GPL");
